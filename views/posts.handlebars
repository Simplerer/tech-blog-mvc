<section id="post-section">
<div class="post-card">
  <div class="card-header">
    <h1>Post a Thought</h1>
  </div>
  <div>
    <form id="post-form">
      <div>
        <h2>Title</h2>
        <p><input type="text" id="post-title" /></p>
      </div>
      <div>
        <h2>Content</h2>
        <p><input type="text" id="post-content" placeholder="Thoughts Today?"></p>
      </div>
      <button type="submit" id="post-btn" class="btn">Post-it!</button>
      <input type="hidden" id="userId" name="userId" value="{{id}}">
    </form>
  </div>
</div>
</section>
  
     

<script src="/js/posts.js"></script>